@@ -0,0 +1,35 @@
+
+set(QT_MIN_VERSION "5.6.0")
+find_package(Qt5 COMPONENTS Core DBus REQUIRED)
+
+set(MDECLARATIVE_CACHE_SOURCES
+    mdeclarativecache.cpp
+)
+
+set(MDECLARATIVE_CACHE_HEADERS
