## $Id$
# Maintainer: Chupligin Sergey (NeoChapay) <neochapay@gmail.com>

pkgname=nemo-device-pinephone-git

pkgver=0.13.1
pkgrel=1
pkgdesc="PinePhone specific files for GlacierUX"
arch=('aarch64')
url="https://github.com/neochapay/nemo-device-dont_be_evil"
license=('BSD-3-Clause')
depends=('glacier-wayland-session'
	'usb-moded'
	'maliit-nemo-keyboard'
	'sensorfw'
	'ofono'
	'ofonoctl'
	'libqofono-qt5'
	'glacier-dialer'
	'glacier-pinquery'
	'qt5-sensors-sensorfw'
	'libngf-qt'
	'qt-mobility-haptics-ffmemless'
	'bluez-utils>5.44'
	'gpsd'
	'atinout'
	'eg25-manager'
	'pulseaudio-module-keepalive'
	'buteo-mtp')

makedepends=('git')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}" "usb-tethering")
source=("${pkgname}::git+${url}")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${pkgname}"
  ( set -o pipefail
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g' ||
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
  ) 2>/dev/null
}

conflicts=("usb-tethering")

package() {
    mkdir -p ${pkgdir}
    cp -r $_basename-$pkgver/sparse/* ${pkgdir}/
    sed -r "s/NEMOVER/${pkgver}/" $_basename-$pkgver/sparse/etc/hw-release > ${pkgdir}/etc/hw-release
}
