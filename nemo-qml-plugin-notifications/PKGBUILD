# Contributor: Alexey Andreyev <aa13q@ya.ru>
# Contributor: Chupligin Sergey (NeoChapay) <neochapay@gmail.com>
# Maintainer: James Kittsmiller (AJSlye) <james@nulogicsystems.com>

pkgname=nemo-qml-plugin-notifications
pkgver=1.2.23
pkgrel=1
pkgdesc="Nemo QML notifications plugin"
arch=('x86_64' 'aarch64')
url="https://github.com/sailfishos/nemo-qml-plugin-notifications"
license=('BSD-3-Clause')
depends=('qt6-declarative')
source=("${url}/archive/refs/tags/$pkgver.tar.gz"
    '0001-compile-with-qt6.patch'
)
sha256sums=('6ae6f85cb7d51a347a209f34926ac221963af226f7393479c803115a4c4bc13d'
    '95272014b5954ab3d0b7940dd274528aba7dc0561d4bd433340d3065a0395458'
)

prepare() {
  cd $pkgname-$pkgver
  patch -p1 --input="${srcdir}/0001-compile-with-qt6.patch"
}


build() {
  cd $pkgname-$pkgver
  mkdir -p build
  cd build
  qmake6 VERSION=${pkgver} ..
  make
}

package() {
  cd $pkgname-$pkgver/build
  make -j 1 INSTALL_ROOT="${pkgdir}" install
}
