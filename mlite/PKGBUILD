# Maintainer: Felix Yan <felixonm...@archlinux.org>

pkgname=mlite
pkgver=0.4.0
pkgrel=1
pkgdesc="Useful classes originating from MeeGo Touch"
arch=('x86_64' 'aarch64')
url="https://github.com/sailfishos/mlite";
license=('LGPL')
depends=('qt6-base' 'dconf')
makedepends=('qt6-tools')
source=("${url}/archive/refs/tags/$pkgver.tar.gz")
sha256sums=('6403c5b7551fae31bfa8d0cc5173905873ffc0ef34d377f09ab10af7bf833aba')

prepare() {
  cd $pkgname-$pkgver
  sed -i -e 's|/usr/libexec|/usr/lib|' \
      tools/mliteremoteaction/mliteremoteaction.pro \
      tools/mliteremoteaction/main.cpp \
      src/mremoteaction.cpp
}

build() {
  cd $pkgname-$pkgver

  qmake6 VERSION=${pkgver}
  make
}

package() {
  cd $pkgname-$pkgver

  make INSTALL_ROOT="$pkgdir" install

  # Remove tests
  rm -r "$pkgdir/opt"
}