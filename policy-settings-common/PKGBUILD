## $Id$
# Maintainer: Chupligin Sergey (NeoChapay) <neochapay@gmail.com>

pkgname=policy-settings-common
pkgver=0.12.2
pkgrel=1
pkgdesc="Common policy settings"
arch=('any')
url="https://github.com/sailfishos/policy-settings-common"
license=('LGPL-2.1-only')
depends=('glib2' 'libprolog' 'swi-prolog7' 'libdres-ohm')
makedepends=('automake' 'autoconf')
source=("${url}/archive/refs/tags/$pkgver.tar.gz")
sha256sums=('a5d2de78ac4a96ac1148c76a1557ccd23e51dcf19d1f496e5c77e5a852e0f981')

prepare() {
    cd $pkgname-$pkgver
    ./autogen.sh
}

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --sbindir=/usr/bin \
    --disable-static
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="${pkgdir}" install
}

