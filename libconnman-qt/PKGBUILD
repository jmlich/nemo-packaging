pkgname=libconnman-qt
pkgver=1.3.8
pkgrel=1
pkgdesc='Qt Quick wrappers for connman'
arch=('x86_64' 'aarch64')
url="https://github.com/sailfishos/libconnman-qt"
license=('GPL')
depends=('qt6-declarative' 'connman')
makedepends=('qt6-tools')
source=("${url}/archive/refs/tags/$pkgver.tar.gz")
sha256sums=('6d0f0794c6bb04ea8d7e57f5f29ea4bc9f948329675190487efd967592816bfc')

build() {
    cd $pkgname-$pkgver
    qmake6 -r VERSION=${pkgver}
    make
}

package() {
    cd $pkgname-$pkgver
    make -j 1 INSTALL_ROOT="$pkgdir" install 
}
