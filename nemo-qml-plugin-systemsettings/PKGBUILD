pkgname=nemo-qml-plugin-systemsettings
pkgver=1.0
pkgrel=1
pkgdesc="System settings plugin for Nemo Mobile"
arch=('x86_64' 'aarch64')
url="https://github.com/nemomobile-ux/nemo-qml-plugin-systemsettings"
license=('BSD')
depends=('openssl'
	'libusb-moded-qt'
	'profiled'
	'timed'
	'nemo-qml-plugin-models'
	'libconnman-qt>=1.2.38'
	'mlite'
	'mce>=1.113.0'
	'nemo-qml-plugin-dbus'
	'libqofono-qt6>=0.105'
	'openssl>=3.0')

makedepends=('qt6-tools' 'mce-headers>=1.32.0' 'pkgconf')
source=("${url}/archive/refs/tags/$pkgver.tar.gz")

sha256sums=('9162b1aa48847e8d638a9ea9d9227b1a525cf647ecf8ba7755a860cd42ba79be')

build() {
    cd $pkgname-$pkgver
    qmake6
    make
}

package() {
    cd $pkgname-$pkgver
    make -j 1 INSTALL_ROOT="$pkgdir/" install
    cd "$pkgdir"
    rm -rf opt
}
