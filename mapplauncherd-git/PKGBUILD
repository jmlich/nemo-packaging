# $Id$
# Maintainer: Chupligin Sergey (Neochapay) <neochapay@gmail.com>

_host="github.com"
_project=sailfishos
_basename=mapplauncherd
_branch=master

_gitname=$_basename
pkgname=$_basename-git

pkgver=4.2.1.r5.g254e3d1

pkgrel=2
pkgdesc="Application launcher for fast startup"
arch=('x86_64' 'aarch64')
url="https://$_host/$_project/$_gitname#branch=$_branch"
license=('LGPL2.1')
depends=('systemd' 'dbus')
makedepends=('git' 'cmake')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=("${pkgname}::git+${url}")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${pkgname}"
  ( set -o pipefail
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g' ||
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
  ) 2>/dev/null
}

build() {
  cd "${srcdir}/${pkgname}"
  export BUILD_TESTS=1
  export MEEGO=1
  unset LD_AS_NEEDED
  rm -f CMakeCache.txt
  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make
}

package() {
  cd "${srcdir}/${pkgname}"
  make DESTDIR="$pkgdir" install
#enable booster service
  mkdir -p $pkgdir/usr/lib/systemd/user/user-session.target.wants/
  ln -s ../booster-generic.service $pkgdir/usr/lib/systemd/user/user-session.target.wants/
#cgroup mount screept stuff
  install -D -m 0755 scripts/booster-cgroup-mount $pkgdir/usr/lib/startup/booster-cgroup-mount
  install -D -m 0755 rpm/booster-cgroup-mount.service $pkgdir/usr/lib/systemd/system/booster-cgroup-mount.service
  sed -i "s|root\:privileged|manjaro\:manjaro|g" $pkgdir/usr/lib/startup/booster-cgroup-mount

  mkdir -p $pkgdir/usr/lib/systemd/system/multi-user.target.wants
  ln -s ../booster-cgroup-mount.service $pkgdir/usr/lib/systemd/system/multi-user.target.wants/
}

post_install() {
  /usr/bin/setcap cap_sys_ptrace+pe /usr/libexec/mapplauncherd/booster-generic || :
}