# Maintainer: Chupligin Sergey (NeoChapay) <neochapay@gmail.com>

pkgname=libXPackageKit
pkgver=0.1.1
pkgrel=1
pkgdesc="PacnageKit library"
arch=('aarch64' 'x86_64')
url="https://github.com/nemomobile-ux/libXPackageKit"
license=('GPL')
depends=('packagekit-qt5')
source=("${pkgname}::git+${url}")
md5sums=('SKIP')


build() {
    cd "${srcdir}/${pkgname}"
    qmake-qt5 PREFIX=/usr .
    make
}

package() {
    cd "${srcdir}/${pkgname}"
    make -j 1 INSTALL_ROOT="$pkgdir/" install
}
