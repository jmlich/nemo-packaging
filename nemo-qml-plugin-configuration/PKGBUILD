# Contributor: Alexey Andreyev <aa13q@ya.ru>
# Contributor: Chupligin Sergey (NeoChapay) <neochapay@gmail.com>
# Maintainer: James Kittsmiller (AJSlye) <james@nulogicsystems.com>

pkgname=nemo-qml-plugin-configuration
pkgver=0.2.7
pkgrel=1
pkgdesc="Configuration plugin for Nemo Mobile"
arch=('x86_64' 'aarch64')
url="https://github.com/sailfishos/nemo-qml-plugin-configuration"
license=('BSD')
depends=('mlite' 'nemo-qml-plugin-dbus')
source=("${url}/archive/refs/tags/$pkgver.tar.gz"
    '0001-fixup-qt6.patch'
)
sha256sums=('23b26e861f62f37709802ebc96049f30cfbef71d0c9b16433ef828fb7bea7e6b'
    '82fcf69fc1577c1f2d0749fee1e6086881533367de1ccec51fb1d8a4524dd183'
)


prepare() {
    cd $pkgname-$pkgver
    patch -p1 --input="${srcdir}/0001-fixup-qt6.patch"
}

build() {
    cd $pkgname-$pkgver
    qmake6
    make
}

package() {
    cd $pkgname-$pkgver
    make -j 1 INSTALL_ROOT="$pkgdir/" install
    rm -rf $pkgdir/opt
}
