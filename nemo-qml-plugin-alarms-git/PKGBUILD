## $Id$

pkgname=nemo-qml-plugin-alarms-git
pkgver=0.3.11.r0.g2bd0624
pkgrel=1
pkgdesc="alarms plugin for Nemo Mobile"
arch=('x86_64' 'aarch64')
url="https://github.com/sailfishos/nemo-qml-plugin-alarms"
license=('BSD')
depends=('qt5-base' 'qt5-timed' 'qt5-declarative')
makedepends=('git')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=("${pkgname}::git+${url}")
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/${pkgname}"
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
    cd "$srcdir/${pkgname}"
    qmake
    make
}

package() {
    cd "$srcdir/${pkgname}"
    make -j 1 INSTALL_ROOT="$pkgdir/" install
    cd "$pkgdir"
    rm -rf opt
}
