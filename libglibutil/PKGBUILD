# Maintainer: Chupligin Sergey (NeoChapay) <neochapay@gmail.com>

pkgname=libglibutil
pkgver=1.0.68
pkgrel=1
pkgdesc="Library of glib utilities"
arch=('x86_64' 'aarch64')
url="https://github.com/sailfishos/${pkgname}"
license=('LGPLv2')
depends=('glib2')
source=("${url}/archive/refs/tags/$pkgver.tar.gz")
sha256sums=('f21df6fe6571f9e79ea2dd0d66c80016f400edd42a68dd7f61e381d103420099')

build() {
    cd $pkgname-$pkgver
    make LIBDIR=/usr/lib KEEP_SYMBOLS=1 release pkgconfig
    make
}

package() {
    cd $pkgname-$pkgver
    make DESTDIR="$pkgdir/" LIBDIR=/usr/lib install-dev
}
