# Maintainer: Chupligin Sergey (NeoChapay) <neochapay@gmail.com>

_host="github.com"
_project=nemomobile-ux
_basename=glacier-polkit-agent
_branch=master

_gitname=$_basename
pkgname=$_basename

pkgver=0.1.1

pkgrel=1
pkgdesc="Nemo polkit agent"
arch=('x86_64' 'aarch64')
url="https://$_host/$_project/$_gitname"
license=('BSD-3-Clause')
depends=('qt5-glacier-app-git' 'polkit-qt5')
makedepends=('cmake' 'qt5-tools')
source=("${url}/archive/refs/tags/$pkgver.tar.gz")
sha256sums=("ceee7fb65b4940d6c92aa9ae4fc40c0e2717efc6d6c3ed78404dadc813711eae")

build() {
    cd $pkgname-$pkgver
    cmake -DCMAKE_INSTALL_PREFIX:PATH='/usr'
    make all
}

package() {
    cd $pkgname-$pkgver
    make DESTDIR="$pkgdir" install
}
