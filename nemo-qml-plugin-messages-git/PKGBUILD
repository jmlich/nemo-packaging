## $Id$

pkgname=nemo-qml-plugin-messages-git
pkgver=0.1.30.r1.gfa309ea
pkgrel=1
pkgdesc="Messages plugin for Nemo Mobile"
arch=('x86_64' 'aarch64')
url="https://github.com/nemomobile-ux/nemo-qml-plugin-messages.git"
license=('BSD')
depends=('telepathy-qt' 'libcommhistory-git' 'qtcontacts-sqlite' 'libqofono-qt5' 'qt5-base' 'qt5-declarative' 'nemo-qml-plugin-dbus')
makedepends=('git')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=("${pkgname%-git}::git+${url}")
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/${pkgname%-git}"
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    cd "$srcdir/${pkgname%-git}"
}

build() {
    cd "$srcdir/${pkgname%-git}"
    qmake
    make
}

package() {
    cd "$srcdir/${pkgname%-git}"
    make -j 1 INSTALL_ROOT="$pkgdir/" install
    cd "$pkgdir"
    rm -rf opt
}
