#  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
#}

build() {
    cd $pkgname-$_commit
    qmake6
    make
}

package() {
    cd $pkgname-$_commit
    INSTALL_ROOT="$pkgdir" make install
}

